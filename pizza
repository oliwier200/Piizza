<script>
/* ===========================
    PROMOCJA ‚Äì TIMER 20 MIN
=========================== */
let time = 20 * 60;
setInterval(() => {
    let m = Math.floor(time / 60);
    let s = time % 60;
    document.getElementById("timer").innerText =
        `${m}:${s < 10 ? "0" + s : s}`;
    if (time > 0) time--;
}, 1000);

/* ===========================
        KOSZYK
=========================== */
let cart = [];
let deliveryCost = 0;
let total = 0;

function addPizza(name, sizeId, extraClass) {
    const size = parseInt(document.getElementById(sizeId).value);
    const extras = [...document.getElementsByClassName(extraClass)]
        .filter(x => x.checked)
        .map(x => parseInt(x.value));

    let price = size + extras.reduce((a, b) => a + b, 0);

    cart.push({ name, price });
    updateCart();
}

function updateCart() {
    total = cart.reduce((a, b) => a + b.price, 0);

    let html = "";
    cart.forEach((p, i) => {
        html += `<p>${p.name} ‚Äì ${p.price} z≈Ç 
            <button onclick="removeItem(${i})">Usu≈Ñ</button></p>`;
    });

    document.getElementById("cart").innerHTML = html;
    document.getElementById("total").innerText = total + deliveryCost;
}

function removeItem(i) {
    cart.splice(i, 1);
    updateCart();
}

function updateDelivery() {
    deliveryCost = parseInt(document.getElementById("delivery").value);
    document.getElementById("deliveryCost").innerText = deliveryCost;
    updateCart();
}

function applyDiscount() {
    if (document.getElementById("kupon").value === "ITALIA10") {
        total *= 0.9;
        alert("Rabat 10% zosta≈Ç naliczony!");
        updateCart();
    } else {
        alert("Z≈Çy kod!");
    }
}

/* ===========================
        OPINIE
=========================== */
function addReview() {
    const star = document.getElementById("stars").value;
    const opinia = document.getElementById("opinia").value;

    if (!opinia) return alert("Napisz co≈õ!");

    document.getElementById("reviewList").innerHTML +=
        `<div class="card"><p>${"‚≠ê".repeat(star)} ‚Äì ${opinia}</p></div>`;

    document.getElementById("opinia").value = "";
}

/* ===========================
        REZERWACJA
=========================== */
function rezerwuj() {
    let osoby = document.getElementById("osoby").value;
    let godz = document.getElementById("godzina").value;

    if (!godz) return alert("Wybierz godzinƒô!");

    document.getElementById("rezMsg").innerText =
        `Zarezerwowano stolik dla ${osoby} os√≥b na godzinƒô ${godz}!`;
}

/* ===========================
        TRYB CIEMNY
=========================== */
function toggleDark() {
    document.body.classList.toggle("dark");
}
</script>
